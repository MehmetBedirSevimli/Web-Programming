@model WebProgramlama.Models.RegisterViewModel

@{
    ViewData["Title"] = "Üye Ol";
}

<div class="container">
    <h2>Üye Ol</h2>
    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="form-group">
            <label>Adı:</label>
            <input asp-for="Adi" class="form-control" />
        </div>
        <div class="form-group">
            <label>Soyadı:</label>
            <input asp-for="Soyadi" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Şifre:</label>
            <input asp-for="Sifre" type="password" class="form-control" />
        </div>
        <!-- Diğer özellikleri ekleyebilirsiniz -->

        <button type="submit" class="btn btn-primary">Üye Ol</button>
    </form>
</div>
