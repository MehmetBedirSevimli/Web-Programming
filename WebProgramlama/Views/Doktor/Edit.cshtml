@model WebProgramlama.Models.Doktor

<h2>Edit</h2>

<form asp-action="UpdateDoktor" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Adi" class="control-label"></label>
        <input asp-for="Adi" class="form-control" />
        <span asp-validation-for="Adi" class="text-danger"></span>
    </div>

    <!-- Diğer özellikler eklenebilir -->

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
