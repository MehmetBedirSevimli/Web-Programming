@model Proje.Models.Randevu

<h2>Randevu Düzenleme</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Kullanici.Adi"></label>
        <input asp-for="Kullanici.Adi" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Doktor.Adi"></label>
        <input asp-for="Doktor.Adi" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Poliklinik.Adi"></label>
        <input asp-for="Poliklinik.Adi" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Tarih"></label>
        <input asp-for="Tarih" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Durum"></label>
        <input asp-for="Durum" class="form-control" />
    </div>
    <input type="hidden" asp-for="RandevuId" />
    <input type="submit" value="Kaydet" class="btn btn-primary" />
</form>
